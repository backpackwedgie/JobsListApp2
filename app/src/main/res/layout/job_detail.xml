<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.leteminlockandkey.jobslistapp2.JobDetailFragment">
    <TextView
        android:id="@+id/job_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/year_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/make_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_detail"
        android:layout_toRightOf="@id/year_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/model_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_detail"
        android:layout_toRightOf="@id/make_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/starteta_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/model_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/endeta_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starteta_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/quote_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endeta_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/comments_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_detail"
        android:textSize="20sp"
        />
    <View
        android:id="@+id/line1_detail"
        android:background="#777777"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/comments_detail"
        />
    <TextView
        android:id="@+id/phonenumber_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonenumber_detail"
        android:textSize="20sp"
        />
    <View
        android:id="@+id/line2_detail"
        android:background="#777777"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/address_detail"
        />
    <TextView
        android:id="@+id/requirements_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/referred_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requirements_detail"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/status_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referred_detail"
        android:textSize="20sp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:tint="#FFFFFF"
        android:layout_below="@id/job_detail"
        android:layout_alignParentRight="true"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
</RelativeLayout>